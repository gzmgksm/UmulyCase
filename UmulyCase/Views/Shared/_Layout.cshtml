<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UmulyCase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UmulyCase.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">UmulyCase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               @* <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>*@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - UmulyCase @*- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="module" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/lib/bootstrap/dist/js/bootstrap-autocomplete.js"></script>
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script type="module">
        import Autocomplete from "../lib/bootstrap/dist/js/bootstrap-autocomplete.js";
        var cities = [];
       
        const el = document.getElementById("CityName");
        function getCities(c) {
            selectedCountry = c.CountryId;

            cities = c.Cities;
           
            const inst = Autocomplete.getInstance(el);
            if (inst != undefined) {
                
                inst.dispose();
            }
           
            el.value = "";
            
            function setSelectedCity(s) {
                selectedCity = s.CityId;
               
            }
            Autocomplete.init("input.city", {
                items: cities,
                valueField: "CityId",
                labelField: "CityName",
                highlightTyped: true,
                onSelectItem: setSelectedCity,
            });

        }


        Autocomplete.init("input.country", {
            items: countries,
            valueField: "CountryId",
            labelField: "CountryName",
            highlightTyped: true,
            onSelectItem: getCities,

        });


    </script>




</body>
</html>
